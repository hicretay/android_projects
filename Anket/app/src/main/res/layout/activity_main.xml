<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Adınız: "
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textSize="20sp"
            android:layout_marginTop="5dp"/>

        <EditText
            android:id="@+id/etName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:digits="@string/alfabe"
            android:layout_marginLeft="43dp"
            android:ems="10"
            android:layout_marginTop="5dp"/>
            <requestFocus />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Soyadınız: "
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textSize="20sp"
            android:layout_marginTop="5dp"/>

        <EditText
            android:id="@+id/etSurname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:digits="@string/alfabe"
            android:layout_marginLeft="10dp"
            android:ems="10"
            android:layout_marginTop="5dp">
        </EditText>
    </LinearLayout>

    <RadioGroup
        android:id="@+id/radioMedeni"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radioEvli"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Evli"
            android:layout_marginTop="5dp"/>

        <RadioButton
            android:id="@+id/radioBekar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:text="Bekar" />
    </RadioGroup>

    <Switch
        android:id="@+id/swHobi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:checked="false"
        android:showText="true"
        android:text="Hobileriniz var mı?"
        android:textOff="Kapalı"
        android:textOn="Açık"
        android:textSize="20sp" />

    <GridLayout
        android:id="@+id/gridHobi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="2"
        android:visibility="gone"
        android:layout_marginTop="10dp">

        <CheckBox
            android:id="@+id/chkSpor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Spor"
            android:layout_marginLeft="10dp"/>
        <CheckBox
            android:id="@+id/chkDans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dans"
            android:layout_marginLeft="10dp"/>
        <CheckBox
            android:id="@+id/chkMüzik"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Müzik"
            android:layout_marginLeft="10dp"/>
        <CheckBox
            android:id="@+id/chkSinema"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sinema"
            android:layout_marginLeft="10dp"/>
    </GridLayout>

    <Button
        android:id="@+id/btnYazdir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Yazdır"
        android:layout_gravity="center_horizontal"/>
    <TextView
        android:id="@+id/txtSonuc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sonuç"
        android:textSize="20sp"/>
</LinearLayout>